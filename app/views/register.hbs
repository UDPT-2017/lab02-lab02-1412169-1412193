<link rel="stylesheet" href="/css/loginCSS.css">
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <div class="panel-heading" style="text-align:center;">
                  <p class="active">Register</p>
                  <hr>
                </div>
                <form class="form-signin" action="#" post="post">
                    <div class="form-group">
                      <input type="email" name="femail" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="">
                    </div>
                    <div class="form-group">
                      <input type="password" name="fpassword" id="password" tabindex="2" class="form-control" placeholder="Password">
                    </div>
                    <div class="form-group">
                      <input type="password" name="fconfirm-password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">
                    </div>
                    <div class="form-group">
                      <input type="text" name="fname" id="fullname" tabindex="3" class="form-control" placeholder="Full Name">
                    </div>
                    <div class="form-group">
                      <input type="text" name="fphone" id="phone" tabindex="4" class="form-control" placeholder="Your Phone">
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Register Now</button>
                </form>
            </div>
        </div>
    </div>
</div>
