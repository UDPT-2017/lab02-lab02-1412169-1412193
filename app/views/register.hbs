<link rel="stylesheet" href="/css/loginCSS.css">
<div class="container">
    <div class="row">
        <div class="col-sm-12 col-md-4 col-md-offset-4">
            <div class="account-wall">
                <div class="panel-heading" style="text-align:center;">
                  <p class="active">Register</p>
                  <hr>
                </div>

                <form class="form-signin" action="/register" method="post" onsubmit="return CheckRegister();">
                    <div class="alert alert-danger" role="alert" style="display:none;" id="error-inf">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only" id="Common-err"></span>
                    </div>
                    <div class="form-group"> <!-- required autofocus -->
                      <input type="email" name="femail" id="email" tabindex="1" class="form-control" placeholder="Email Address" value="" >
                      <span class="label label-danger" style="display:none;" id="email-err"></span>
                    </div>
                    <div class="form-group">
                      <input type="password" name="fpassword" id="password" tabindex="2" class="form-control" placeholder="Password" >
                      <span class="label label-danger" style="display:none;" id="password-err"></span>
                    </div>
                    <div class="form-group">
                      <input type="password" name="fconfirm-password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password" >
                      <span class="label label-danger" style="display:none;" id="configpassword-err"></span>
                    </div>
                    <div class="form-group">
                      <input type="text" name="fname" id="fullname" tabindex="3" class="form-control" placeholder="Full Name" onkeypress="check_character(event)">
                      <span class="label label-danger" style="display:none;" id="name-err"></span>
                    </div>
                    <div class="form-group">
                      <input type="text" name="fphone" id="phone" tabindex="4" class="form-control" placeholder="Your Phone" onkeypress="check_number(event)">
                      <span class="label label-danger" style="display:none;" id="phone-err"></span>
                    </div>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">Register Now</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="/js/checkRegister.js"></script>
