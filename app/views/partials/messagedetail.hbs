<style >
.editable{
  height: 300px;
  width: 100%;
  cursor: text;
  border: 1px solid #999;
  background: white;
  overflow-y:scroll;
}
</style>
<form action="/newmessage" method="post" onsubmit="return CheckMessage();">
  <div class="alert alert-danger" role="alert" style="display:none;" id="error-inf">
      <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
      <span class="sr-only" id="Common-err"></span>
  </div>
  <div class="form-group">
    <!-- se chua select-->
    <select name="EmailID" class="form-control" id="sel1">
      {{#if list.length}}
          {{#each list}}
            <option value="{{this.id}}">{{this.email}}</option>
          {{/each}}
      {{/if}}
    </select>
  </div>
  <div class="form-group">
    <input name="fchude" type="text" class="form-control" id="chudeEMAIL" placeholder="Chủ đề">
  </div>
  <div class="form-group">
    <div name="fnoidung" id="noidung" class="form-control editable" placeholder="Nội dung">

    </div>
  </div>
  <button type="submit" class="btn btn-primary" id="sentButton">Sent</button>
</form>
