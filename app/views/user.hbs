<link rel="stylesheet" href="/css/userCSS.css">
{{> popup}}
<div class="">
    <div class="">
        <div class="col-md-6 col-xs-12 col-sm-12">
          <div class="panel panel-default" id="frame-friendlist">
              <div class="panel-heading c-list">
                  <span class="title">You want to find someOne ?</span>
                  <div class="pull-right">
                    <!-- <a class = "glyphicon glyphicon-plus" href="#cant-do-all-the-work-for-you" data-toggle="tooltip" data-placement="top" title="Add Friends"></a> -->
                    <a class="" id="refreshPagefriend" data-command="" data-toggle="tooltip" data-placement="top" title="Refresh"><i class="glyphicon glyphicon-refresh"></i></a>
                    <a class="hide-search" data-command="toggle-search1" data-toggle="tooltip" data-placement="top" title="Search Friends"><i class="glyphicon glyphicon-search"></i></a>
                  </div>
              </div>

              <div class="row" style="display: none;" id="row-frame1">
                  <div class="col-xs-12">
                      <div class="input-group">
                          <input type="text" class="form-control" id="contact-list-search1">
                          <span class="input-group-btn">
                              <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                          </span>
                      </div>
                  </div>
              </div>

              <ul class="list-group" id="contact-list1">
                {{#if sv.length}}
                    {{#each sv}}
                        <li class="list-group-item">
                            <div class="col-xs-12 col-sm-12">
                                <!-- email fullname phone-->
                                <input class="idText" type="hidden" name="id" value="{{this.id}}">
                                <p class="fullname" data-search="names"><span class="name glyphicon glyphicon-user" style="width:50px;"></span>{{this.fullname}}</p>
                                <p class="email"><span class="glyphicon glyphicon-envelope one" style="width:50px;"></span>{{this.email}}</p>
                                <p class="phone"><span class="glyphicon glyphicon-earphone one" style="width:50px;"></span>{{this.phone}}</p>
                                <div class="pull-right">
                                  <button button-add="addfriendBTN" type="button" class = "btn btn-success " data-toggle="tooltip" data-placement="top" title="Add Friends" id="addfriend">
                                    <span class="glyphicon glyphicon-plus"></span>
                                  </button>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    {{/each}}
                {{/if}}
              </ul>
          </div>
        </div>
        <div class="col-md-6 col-xs-12 col-sm-12">
            <div class="panel panel-default" id="frame-friendlist">
                <div class="panel-heading c-list">
                    <span class="title">Friend List</span>
                    <div class="pull-right">
                      <a class="" id="refreshfriend" data-command="" data-toggle="tooltip" data-placement="top" title="Refresh" style="display:none;"><i class="glyphicon glyphicon-refresh"></i></a>
                      <a href="#" class="hide-search" data-command="toggle-search" data-toggle="tooltip" data-placement="top" title="Search Friends"><i class="glyphicon glyphicon-search"></i></a>
                    </div>
                </div>

                <div class="row" style="display: none;" id="row-frame">
                    <div class="col-xs-12">
                        <div class="input-group">
                            <input type="text" class="form-control" id="contact-list-search">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                            </span>
                        </div>
                    </div>
                </div>
                <ul class="list-group" id="contact-list">
                  {{#if friends.length}}
                      {{#each friends}}
                        <li class="list-group-item">
                            <div class="col-xs-12 col-sm-12">
                                <!-- email fullname phone-->
                                <input class="idText" type="hidden" name="" value="{{this.id}}">
                                <p class="name" data-search="names"><span class="name glyphicon glyphicon-user" style="width:50px;"></span>{{this.fullname}}</p>
                                <p class="email"><span class="glyphicon glyphicon-envelope one" style="width:50px;"></span>{{this.email}}</p>
                                <p class="phone"><span class="glyphicon glyphicon-earphone one" style="width:50px;"></span>{{this.phone}}</p>
                                <div class="pull-right">
                                  <button type="button" class = "btn btn-danger " data-toggle="tooltip" data-placement="top" title="Romove Friends" >
                                    <span class="glyphicon glyphicon-remove"></span>
                                  </button>
                                  <button button-send="sendMail"  type="button" class="btn btn-success" data-toggle="modal" data-target="#enquirypopup" title="Send Mail">
                                      <span class="glyphicon glyphicon-envelope one"></span>
                                  </button>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                      {{/each}}
                  {{/if}}
                </ul>
            </div>
        </div>
    </div>
</div>
<script src="/js/userJS.js"></script>
